{
  "name": "real-time-campaign-platform",
  "version": "1.0.0",
  "description": "Real-time campaign messaging platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:api": "node dist/index.js api",
    "start:worker": "node dist/index.js worker",
    "dev:api": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts api",
    "dev:worker": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts worker",
    "dev": "concurrently \"npm:dev:*\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "bullmq",
    "express",
    "websocket"
  ],
  "author": "Rizky Ilham Pratama",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@bull-board/express": "^5.10.2",
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^6.5.0",
    "bullmq": "^4.15.5",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.15.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
